- provide(:title, "Login")
.row
	/ - render 'shared/error_messages'
	.medium-8.large-6.columns.small-centered.text-center
		%h1
			%strong Login
	= form_for :session, url: sessions_path do |f|
		.medium-8.large-6.columns.small-centered.text-center
			= f.text_field :email, placeholder: "Email"
		.medium-8.large-6.columns.small-centered.text-center
			= f.password_field :password, placeholder: "Password"
		.medium-8.large-6.columns.small-centered
			.row
				.medium-6.large-6.columns.right
					= f.submit "Login", class: "button right"
				.medium-4.large-4.columns.left
					%p Need an account?
				.medium-2.large-2.columns.left
					%a{ href: register_path } Register