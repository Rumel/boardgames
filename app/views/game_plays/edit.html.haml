.row
	%h1.text-center 
		%strong Edit Game Play

= form_for @game_play do |f|
	.row
		.medium-8.large-6.columns.small-centered
			= select_tag :board_game_id, options_from_collection_for_select(@board_games, :id, :name, @game_play.board_game.id.to_s), prompt: "Please select a game"
		.medium-8.large-6.columns.small-centered
			- @players.each do |p|
				%label.game-play-label
					= check_box_tag 'game_play[player_ids][]', p.id, @player_ids.include?(p.id) , class: "game-play-checkbox"
					= p.name
		.medium-8.large-6.columns.small-centered
			= f.text_area :description, placeholder: "Description"
		.medium-8.large-6.columns.small-centered
			= f.submit "Save", class: "button small right"