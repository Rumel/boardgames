- provide(:title, @board_game.name)
%br
.row
	.medium-6.large-6.columns.right.text-center
		%h1 
			%strong 
				= @board_game.name
	.medium-6.large-6.columns.left
		%img.image-center{ src: @board_game.image(350,350) }
		%br
	.medium-6.large-6.columns.right.text-center
		%a.button.large.columns{href: edit_board_game_path(@board_game.id) } Edit
		%a.button.large.columns.disabled Delete
.row
	.medium-6.large-6.columns.right
		- if !@board_game.starting_player_rule.blank?
			%h1 Starting Player
			%h4= @board_game.starting_player_rule
		- if !@board_game.rule_book_link.blank?
			%h1
				%a{href: @board_game.rule_book_link} Rulebook
		- if @board_game.round_based?
			%h1= "Rounds: #{@board_game.rounds}"
		- if !@board_game.description.blank?	
			%h1 Description
			%p= @board_game.description
	.medium-6.large-6.columns.text-center.left
		%h1= "Played: #{@board_game.game_plays.count}"
		- @board_game.game_plays.reverse.each do |gp|
			.board-game-game-play
				%h3= gp.date_string
				%h5= gp.players_string
				%br
	
