%li.show-for-small-only
	.game-play-item-small
		%h2
			%strong= game_play.board_game.name
		%h4= game_play.created_at.strftime("%-m/%d/%y")
%li.show-for-medium-up
	.row
		.game-play-item-medium
			.medium-4.large-4.columns
				%img.image-game-play-medium{src: game_play.board_game.image_url }
			.medium-8.large-8.columns
				%h1
					%strong= game_play.board_game.name
				%h3= game_play.created_at.strftime("%-m/%d/%y")
